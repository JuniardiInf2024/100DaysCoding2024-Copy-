package days51;
import java.util.Scanner;
public class Days51{
    public static void main(String[] args) {
        Scanner junjun = new Scanner(System.in);
        
        // Meminta input dari pengguna
        System.out.print("Masukkan angka antara 1 hingga 7 untuk memilih hari: ");
        int day = junjun.nextInt();
        
        // Menggunakan switch case berdasarkan input pengguna
        switch (day) {
            case 1:
                System.out.println("Senin");
                break;
            case 2:
                System.out.println("Selasa");
                break;
            case 3:
                System.out.println("Rabu");
                break;
            case 4:
                System.out.println("Kamis");
                break;
            case 5:
                System.out.println("Jumat");
                break;
            case 6:
                System.out.println("Sabtu");
                break;
            case 7:
                System.out.println("Minggu");
                break;
            default:
                System.out.println("Hari tidak valid, masukkan angka antara 1 hingga 7.");
                break;
        }
    }
}
